{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
    }],
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    
        "<all_urls>"
  ]
}
